{
	"name": "art2ascii-typescript",
	"version": "1.0.3",
	"description": "",
	"main": "main.js",
	"scripts": {
		"start": "npm run serve",
		"build": "npm run build-ts && npm run tslint",
		"serve": "node dist/main.js",
		"watch-node": "sleep 5 && nodemon dist/server.js",
		"build-ts": "tsc",
		"watch-ts": "tsc -w",
		"tslint": "tslint -c tslint.json -p tsconfig.json",
		"format": "prettier --write \"src/**/*.ts\"",
		"all": "npm run format && npm run build && npm run start",
		"dev": "npm run build && npm run start"
	},
	"author": "Thaeriem",
	"license": "MIT",
	"devDependencies": {
		"@types/express": "^4.17.21",
		"typescript": "^5.4.5"
	},
	"type": "module",
	"dependencies": {
		"ansi_up": "^6.0.2",
		"eslint": "^8.41.0",
		"express": "^4.19.2",
		"heap-js": "^2.5.0",
		"prettier": "^2.8.8",
		"tslint": "^6.1.3"
	}
}
